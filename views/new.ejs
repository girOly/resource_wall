<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Profile</title>
    <link rel="icon" href="data:;base64,=">
    <link rel="stylesheet" href="/css/newresource.css" type="text/css">

    <link href="https://fonts.googleapis.com/css?family=Josefin+Sans|Raleway&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </head>
  <body>
      <% include partials/_header %>
      <% if (user) {%>
        <div class="title"> <h1> Make your new Resource: <%= user.full_name %> </h1></div>
        <% } %>
        <div class="flex">
        <form action="/resources/new" method="POST">
          <div>
            <input name="title" class="form-control" placeholder="Title">
          </div>
          <div>
            <input name= "description" class="form-control" placeholder="Description" required>
          </div>
          <div>
              <input name= "thumbnail_url" class="form-control" placeholder="Image" required>
          </div>
          <div>
              <input name= "external_url" class="form-control" placeholder="Url" required>
          </div>
          <div class="checkbox">
            <% for (let category in categories) { %>
              <label><input name = "categories" type="checkbox" value="<%= categories[category].id %>"><%= categories[category].title %></label>
              <% } %>
            </div>
          <button class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" type="submit">Add your resource</button>
        </form>

      </div>
</body>
